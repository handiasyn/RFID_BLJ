<body>
  <div class="header">
    <h1>REALISASI RFID BLJ 2025</h1>
    <div class="search-box">
      <input type="number" id="idInput" placeholder="Masukkan ID kamu..." />
      <button onclick="cekStatus()">Check</button>
    </div>
  </div>

  <div class="result-box hidden" id="resultBox"></div>

  <script>
    function cekStatus() {
      const id = document.getElementById("idInput").value.trim();
      const resultBox = document.getElementById("resultBox");

      if (!id) {
        resultBox.innerHTML = "⚠️ Mohon masukkan ID terlebih dahulu.";
        resultBox.classList.remove("hidden");
        return;
      }

      fetch(`https://script.google.com/macros/s/AKfycbxYSfatbeOoBdf_KPXDwuNa15rnatB0MAT1IUs0jDRYTA2w8YZnm6Xc3EE1uPHnxm32/exec?id=${id}`)
        .then((res) => res.text())
        .then((data) => {
          resultBox.innerText = data;
          resultBox.classList.remove("hidden");
        })
        .catch((err) => {
          resultBox.innerText = "❌ Terjadi kesalahan. Silakan coba lagi.";
          resultBox.classList.remove("hidden");
        });
    }
  </script>
</body>
